{% extends "BGCinemaBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block bgcinema_body %}

  {% image '@BGCinemaBundle/Resources/public/img/Prog.jpg' %}
    <img id="programmation" src="{{ asset_url }}" alt="Programmation">
  {% endimage %}


  <h2>Films de la semaine</h2>

  <ul>
    {% for film in listFilms %}
      <li>
        <a href="{{ path('bg_cinema_view', {'film_id': film.id}) }}">
          {{ film.title }}
        </a>
        par {{ film.author }},
        le {{ film.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) de films</li>
    {% endfor %}
  </ul>

  <ul>
    {% for p in range(1, nbPages) %}
      <li{% if p == page %} class="active"{% endif %}>
        <a href="{{ path('bg_cinema_home', {'page': p}) }}">{{ p }}</a>
      </li>
    {% endfor %}
  </ul>

{% endblock %}
